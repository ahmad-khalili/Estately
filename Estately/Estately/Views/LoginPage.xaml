<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Estately.Views.LoginPage"
             Title="Sign in">

    <ContentPage.Content>
        <Grid VerticalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <!--
            <Label Padding="20,30,20,0" Text="Email" Grid.Row ="0" ></Label>-->
            
            <Entry Margin="20,0,20,0" x:Name = "Email" Grid.Row="0"  Text="{Binding Email}" Placeholder="Email" Keyboard="Email"/>
            <Label Padding="20,30,20,0" Text="Don't have an account?" TextColor="blue" Grid.Row="5">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NoAccountCommand}"/>
                </Label.GestureRecognizers>
            </Label>

            <!--<Label Padding="20,30,20,0" Text="Password" Grid.Row = "2"></Label>-->
            <Entry Margin="20,0,20,0" x:Name = "Password" Grid.Row="3" IsPassword="True" Text="{Binding Password}" Placeholder="Password" />
            <Button Margin="20,0,20,30" HorizontalOptions="Center" WidthRequest="200" x:Name ="LoginButton" Grid.Row="9" Text="Login" Command="{Binding LoginCommand}"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>